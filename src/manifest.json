{
  "manifest_version": 2,
  "name": "AceStream Links",
  "description": "Convert AceStream text URLs to clickable links.",
  "version": "2.1",
  "homepage_url": "https://github.com/jonian/acestream-links",
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "64": "icon.svg",
    "96": "icon.svg",
    "128": "icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["links.js"],
      "css": ["links.css"]
    },
    {
      "matches": [
        "https://www.reddit.com/r/streams*",
        "https://www.reddit.com/r/soccerstreams*",
        "https://www.reddit.com/r/NHLStreams*"
      ],
      "js": ["observer.js"]
    }
  ],
  "permissions": ["activeTab"],
  "web_accessible_resources": ["icon.svg"]
}
