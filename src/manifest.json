{
  "manifest_version": 2,
  "name": "AceStream Links",
  "description": "Convert AceStream text URLs to clickable links.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["links.js"]
    }
  ],
  "permissions": ["activeTab"]
}
